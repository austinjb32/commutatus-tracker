{
  "name": "commutatus-tracker",
  "displayName": "Commutatus Task Tracker",
  "description": "Integrate with Commutatus task tracking via API. Manual time entry only.",
  "version": "0.0.1",
  "license": "COMMERCIAL",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:commutatus-tracker",
    "onCommand:git.checkout"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commutatus-tracker.addTimeLog",
        "title": "Task: Add Time Log",
        "category": "Commutatus"
      },
      {
        "command": "commutatus-tracker.logCommitTime",
        "title": "Task: Log Time for Last Commit",
        "category": "Commutatus"
      },
      {
        "command": "commutatus-tracker.showTask",
        "title": "Task: Show Current Task",
        "category": "Commutatus"
      },
      {
        "command": "commutatus-tracker.setApiToken",
        "title": "Task: Set API Token",
        "category": "Commutatus"
      },
      {
        "command": "commutatus-tracker.setTaskId",
        "title": "Task: Set Task ID",
        "category": "Commutatus"
      }
    ],
    "views": {
      "commutatus-tracker": [
        {
          "id": "commutatus-tracker-taskView",
          "type": "webview",
          "name": "Task Details",
          "icon": "$(clock)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commutatus-tracker",
          "title": "Task Tracker",
          "icon": "$(clock)"
        }
      ]
    },
    "configuration": {
      "title": "Commutatus Task Tracker",
      "properties": {
        "commutatusTracker.apiUrl": {
          "type": "string",
          "default": "https://api.commutatus.com",
          "description": "Base URL for the Commutatus API"
        },
        "commutatusTracker.taskId": {
          "type": "string",
          "default": "",
          "description": "Current task ID for this workspace"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
